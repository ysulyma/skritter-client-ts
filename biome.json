{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",

              ":PACKAGE:",
              ":BLANK_LINE:",

              ["../**"],
              ":BLANK_LINE:",

              ["./**"],
              ":BLANK_LINE:",

              "**/*.json"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/node_modules"]
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": false,
    "includes": ["**", "!**/.next", "!**/node_modules"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/*.js",
      "!**/*.mjs",
      "!**/*.mts",
      "!**/node_modules/*",
      "!**/node_modules/",
      "!**/.next/",
      "!**/.eslintrc.cjs"
    ],
    "rules": {
      "recommended": true
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
